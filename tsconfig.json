{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true,
        "verbatimModuleSyntax": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "lib": [
            "ESNext",
            "DOM"
        ]
    },
    "include": [
        "./src",
        "./build",
        "tests"    ]
}